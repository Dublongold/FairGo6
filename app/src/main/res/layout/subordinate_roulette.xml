<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/roulette_container_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/roulette_container_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/roulette_button_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/nothing"
                android:foreground="@drawable/menu_button_ripple"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button_4" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/roulette_container_3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/default_text_bg">

            <ImageButton
                android:id="@+id/roulette_button_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/nothing"
                android:foreground="@drawable/menu_button_ripple"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button_5" />

            <ImageButton
                android:id="@+id/roulette_button_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/nothing"
                android:foreground="@drawable/menu_button_ripple"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button_6" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/roulette_button_4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@android:color/transparent"
            android:contentDescription="@string/nothing"
            android:foreground="@drawable/menu_button_ripple"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/button_9" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>