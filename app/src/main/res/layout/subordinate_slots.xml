<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/slots_container_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/slots_button_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/nothing"
            android:foreground="@drawable/menu_button_ripple"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/button_4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slots_container_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/slots_container_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/default_text_bg">

            <ImageButton
                android:id="@+id/slots_button_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/nothing"
                android:foreground="@drawable/menu_button_ripple"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button_5" />

            <ImageButton
                android:id="@+id/slots_button_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/nothing"
                android:foreground="@drawable/menu_button_ripple"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button_6" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/slots_button_4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/game_5"
            android:textColor="@color/color_2"
            android:textSize="@dimen/dimen_16_sp"
            android:contentDescription="@string/nothing"
            android:foreground="@drawable/menu_button_ripple"
            android:scaleType="centerCrop"
            android:background="@drawable/spin_selector"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/slots_button_5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:layout_marginEnd="16dp"
            android:text="@string/game_6"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16_sp"
            android:contentDescription="@string/nothing"
            android:foreground="@drawable/menu_button_ripple"
            android:scaleType="centerCrop"
            android:background="@drawable/spin_selector"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/slots_button_6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/game_7"
            android:textColor="@color/color_2"
            android:textSize="@dimen/dimen_16_sp"
            android:contentDescription="@string/nothing"
            android:foreground="@drawable/menu_button_ripple"
            android:scaleType="centerCrop"
            android:background="@drawable/spin_selector"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>